<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/SecondaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_novo_nivel_novo" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/novo_nivel_layout_margin"
                android:padding="@dimen/novo_nivel_layout_margin">

                <EditText
                    android:id="@+id/level_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/novo_nivel_layout_margin"
                    android:hint="@string/admin_novo_nivel_nome" />

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/SecondaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_novo_nivel_pontuacoes" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/novo_nivel_layout_margin"
                android:padding="@dimen/novo_nivel_layout_margin">

                <EditText
                    android:id="@+id/level_base_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/novo_nivel_layout_margin"
                    android:hint="@string/admin_novo_nivel_base"
                    android:inputType="number" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/novo_nivel_layout_margin"
                android:padding="@dimen/novo_nivel_layout_margin">

                <EditText
                    android:id="@+id/level_errada_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/novo_nivel_layout_margin"
                    android:hint="@string/admin_novo_nivel_errada"
                    android:inputType="number" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/novo_nivel_layout_margin"
                android:padding="@dimen/novo_nivel_layout_margin">

                <EditText
                    android:id="@+id/level_ajuda_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/novo_nivel_layout_margin"
                    android:hint="@string/admin_novo_nivel_ajuda"
                    android:inputType="number" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>