<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity_estatisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipp.estg.cmu.ui.EstatisticasJogoFragment"
    tools:showIn="@layout/activity_estatisticas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estatisticas do Jogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pontuacao_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/pontuacao_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nPerguntasLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nPerguntas" />

        <TextView
            android:id="@+id/n_perguntas_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_respostas_certas_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/n_respostas_certas_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_respostas_erradas_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/n_respostas_erradas_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_ajudas_usadas_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/n_ajudas_usadas_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pontuacao_ganha_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/pontuacao_ganha_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pontuacao_perdida_estatisticas_jogo_label" />

        <TextView
            android:id="@+id/pontuacao_perdida_estatisticas_jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/n_perguntas_categoria_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_perguntas_categoria_label" />

        <TextView
            android:id="@+id/n_perguntas_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/n_perguntas_nivel_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_perguntas_nivel_label" />

        <TextView
            android:id="@+id/n_perguntas_nivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
