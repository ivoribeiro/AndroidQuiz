<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/adapter_level_row_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pergunta_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/adapter_level_layout_padding">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/adapter_level_image_size"
            android:layout_height="@dimen/adapter_level_image_size" />

        <TextView
            android:id="@+id/user_name"
            style="@style/PrimarySmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/adapter_level_layout_padding" />

    </LinearLayout>

</android.support.v7.widget.CardView>