<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="@dimen/adapter_level_row_margin"
    android:orientation="vertical">

    <!--TODO Update layout height-->

    <LinearLayout
        android:id="@+id/pergunta_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/adapter_level_layout_padding">


        <TextView
            android:id="@+id/answer_title"
            style="@style/PrimarySmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</android.support.v7.widget.CardView>