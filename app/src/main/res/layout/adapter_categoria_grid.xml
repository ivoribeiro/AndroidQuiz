<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/categoria_card_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/categoria_layout_padding">

        <ImageView
            android:id="@+id/categoria_image"
            android:layout_width="@dimen/categoria_image_size"
            android:layout_height="@dimen/categoria_image_size"
            android:background="@drawable/img_lock" />

        <TextView
            android:id="@+id/categoria_text"
            style="@style/SecondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>
</android.support.v7.widget.CardView>