<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_estatisticas_categoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/adapter_level_row_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/estatisticas_categoria_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/adapter_level_layout_padding">

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="@dimen/adapter_level_image_size"
            android:layout_height="@dimen/adapter_level_image_size"
            android:src="@drawable/img_cat_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pontuacao_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/pontuacao_estatisticas" />

            <TextView
                android:id="@+id/pontuacao_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_perguntas_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/n_perguntas_estatisticas" />

            <TextView
                android:id="@+id/n_perguntas_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_respostas_certas_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/n_respostas_certas_estatisticas" />

            <TextView
                android:id="@+id/n_respostas_certas_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_respostas_erradas_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/n_respostas_erradas_estatisticas" />

            <TextView
                android:id="@+id/n_respostas_erradas_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_ajudas_usadas_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/n_ajudas_usadas_estatisticas" />

            <TextView
                android:id="@+id/n_ajudas_usadas_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pontuacao_ganha_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/pontuacao_ganha_estatisticas" />

            <TextView
                android:id="@+id/pontuacao_ganha_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pontuacao_perdida_categoria_label"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding"
                android:text="@string/pontuacao_perdida_estatisticas" />

            <TextView
                android:id="@+id/pontuacao_perdida_categoria"
                style="@style/PrimarySmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/adapter_level_layout_padding" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>