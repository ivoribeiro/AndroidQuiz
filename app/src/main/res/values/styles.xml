<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Orange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:color">@color/primary_text</item>
    </style>

    <style name="PrimarySmallTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_title_small_size</item>
        <item name="android:color">@color/primary_text</item>
    </style>

    <style name="SecondaryTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_title_size</item>
        <item name="android:color">@color/secondary_text</item>
    </style>

    <style name="SecondarySmallTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_title_small_size</item>
        <item name="android:color">@color/secondary_text</item>
    </style>

    <style name="ThirdTitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/third_title_size</item>
        <item name="android:color">@color/secondary_text</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/accent</item>
    </style>


</resources>
