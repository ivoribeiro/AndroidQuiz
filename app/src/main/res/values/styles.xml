<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_0</item>
        <item name="colorPrimaryDark">@color/primary_dark_0</item>
        <item name="android:colorBackground">@color/primary_light_0</item>
        <item name="colorAccent">@color/accent_0</item>
        <item name="android:textColorPrimary">@color/primary_text_0</item>
        <item name="android:textColorSecondary">@color/secondary_text_0</item>
    </style>

    <style name="CustomThemePink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorPrimaryDark">@color/primary_dark_1</item>
        <item name="android:colorBackground">@color/primary_light_1</item>
        <item name="colorAccent">@color/accent_1</item>
        <item name="android:textColorPrimary">@color/primary_text_1</item>
        <item name="android:textColorSecondary">@color/secondary_text_1</item>
    </style>

    <style name="CustomThemeYellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_2</item>
        <item name="colorPrimaryDark">@color/primary_dark_2</item>
        <item name="android:colorBackground">@color/primary_light_2</item>
        <item name="colorAccent">@color/accent_2</item>
        <item name="android:textColorPrimary">@color/primary_text_2</item>
        <item name="android:textColorSecondary">@color/secondary_text_2</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="PrimarySmallTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_title_small_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SecondaryTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_title_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="SecondarySmallTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_title_small_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="ThirdTitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/third_title_size</item>
        <item name="android:color">@color/secondary_text</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">?colorAccent</item>
    </style>

    <style name="AppBackground">
        <item name="android:background">?android:colorBackground</item>
    </style>

</resources>
